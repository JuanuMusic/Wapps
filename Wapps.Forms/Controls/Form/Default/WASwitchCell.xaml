<?xml version="1.0" encoding="UTF-8"?>
<Wapps:WSwitchCell xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		x:Class="Wapps.Forms.Controls.WASwitchCell"
		xmlns:Wapps="clr-namespace:Wapps.Forms.Controls;">

		<StackLayout Spacing="0" Orientation="Horizontal" Padding="15, 2, 15, 2" HorizontalOptions="FillAndExpand">
			<Label x:Name="TitleLabel" HeightRequest="25" HorizontalOptions="StartAndExpand" VerticalTextAlignment="Center" TextColor="#2a6899" FontSize="16" />		
			<Switch x:Name="ValueSwitch" HeightRequest="25" HorizontalOptions="End" />
		</StackLayout>
	
</Wapps:WSwitchCell>
