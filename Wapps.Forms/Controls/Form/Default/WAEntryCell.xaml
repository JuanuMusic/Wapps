<?xml version="1.0" encoding="UTF-8"?>
<Wapps:WEntryCell xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		x:Class="Wapps.Forms.Controls.WAEntryCell"
		xmlns:Wapps="clr-namespace:Wapps.Forms.Controls;">

		<StackLayout Spacing="0" Orientation="Vertical" Padding="15, 2, 5, 2">
			<StackLayout Orientation="Horizontal" Spacing="0">
				<Label x:Name="TitleLabel" HeightRequest="25" HorizontalOptions="Start" VerticalTextAlignment="Center" TextColor="#2a6899" FontSize="16" />
				<Label x:Name="ErrorLabel" HorizontalOptions="EndAndExpand" HorizontalTextAlignment="End" VerticalTextAlignment="Center" TextColor="Red" FontSize="12" />		
			</StackLayout>
			<Wapps:WEntry x:Name="TxtValue" SuggestionsBarVisible="false" HeightRequest="25" TextColor="Black" Margin="0,0,0,0" PlaceholderColor="Gray" HasBorder="false" FontSize="16" />
		</StackLayout>
	
</Wapps:WEntryCell>
